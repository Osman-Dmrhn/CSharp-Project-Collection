@{
    ViewData["Title"] = "Yönetici Girişi";
}

<h2>Yönetici Girişi</h2>
<form method="post" class="w-50 mx-auto mt-4">
    <div class="mb-3">
        <label>Email</label>
        <input name="email" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Şifre</label>
        <input name="password" type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-dark w-100">Giriş Yap</button>
    <div class="text-danger mt-2">@ViewBag.Error</div>
</form>
