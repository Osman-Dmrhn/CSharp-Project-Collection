@{
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Paneli</title>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.0.5/dist/css/adminlte.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.0.5/dist/js/adminlte.min.js"></script>

    <style>
        body {
            background-color: #f4f6f9;
        }

        .dashboard-container {
            margin-top: 50px;
        }

        .card {
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .card:hover {
                transform: translateY(-10px);
            }

        .card-title {
            font-size: 1.4rem;
        }

        .icon {
            font-size: 3rem;
            margin-bottom: 20px;
            color: #5a67d8;
        }

        .btn-primary {
            background-color: #5a67d8;
            border: none;
        }

            .btn-primary:hover {
                background-color: #43499c;
            }

        .btn-logout {
            background-color: #ff4d4d;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn-logout:hover {
                background-color: #ff1a1a;
            }
    </style>
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <span class="brand-text font-weight-light">Admin Paneli</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="https://adminlte.io/themes/v3/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@await Component.InvokeAsync("LoggedInUser")</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Admin" asp-area="AdminArea" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                        </li>
                        <!-- Yeni Menüler (Butonlar) Buraya Taşındı -->
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Category" asp-area="AdminArea" class="nav-link">
                                <i class="nav-icon fas fa-list"></i>
                                <p>Kategori İşlemleri</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="AdminBlog" asp-area="AdminArea" class="nav-link">
                                <i class="nav-icon fas fa-blog"></i>
                                <p>Blog İşlemleri</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Manager" asp-area="AdminArea" class="nav-link">
                                <i class="nav-icon fas fa-user-plus"></i>
                                <p>Yeni Yönetici Ekle</p>
                            </a>
                        </li>
                        <!-- Çıkış Butonu -->
                        <li class="nav-item">
                            <a asp-controller="Admin" asp-action="LogOut" class="nav-link btn-logout">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>Çıkış Yap</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <div class="container dashboard-container text-center">
                <h1 class="mb-5">Admin Paneli</h1>

                <!-- Dashboard İçeriği Burada -->
                <div class="row justify-content-center">
                    <!-- Kendi içeriklerinizi buraya ekleyebilirsiniz -->
                    <p>Admin paneline hoş geldiniz. Sol menüden işlemlerinizi yapabilirsiniz.</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
