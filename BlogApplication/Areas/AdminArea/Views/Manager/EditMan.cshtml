@model Admin
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2>Yönetici Düzenle</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-action="EditMan" asp-controller="Manager" asp-area="AdminArea">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label class="form-label">Kullanıcı Adı</label>
                    <input asp-for="KullaniciAdi" class="form-control" />
                    <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Şifre</label>
                    <input asp-for="Sifre" type="password" class="form-control" />
                    <span asp-validation-for="Sifre" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label class="form-label">Rol</label>
                    <select asp-for="Rol" class="form-control">
                        <option value="Admin">Admin</option>
                        <option value="Moderatör">Moderatör</option>
                    </select>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">Güncelle</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>